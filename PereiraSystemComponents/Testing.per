=>
    (set-goal gl-positionXisHigh 1)
    (disable-self)  
)
(defrule
    (up-compare-goal gl-myPosition-y g:>= gl-mapSizeTwoThirds)
=>
    (set-goal gl-positionYisHigh 1)(disable-self)  
)
